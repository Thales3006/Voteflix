<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thales.client.controller.MenuController">
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <top>
      <HBox alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="reviewButton" mnemonicParsing="false" onAction="#HandleReviewButton" text="Reviews" />
            <Button fx:id="movieButton" mnemonicParsing="false" onAction="#HandleMovieButton" text="Movies" />
            <Button fx:id="userButton" mnemonicParsing="false" onAction="#HandleUserButton" text="User" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#HandleLogoutButton" text="Logout" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <BorderPane fx:id="mainContent" BorderPane.alignment="CENTER">
         <center>
            <Label text="Select a Page" BorderPane.alignment="CENTER" />
         </center></BorderPane>
   </center>
</BorderPane>
