<BorderPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <ScrollPane hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
        </content>
      </ScrollPane>
   </center>
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="410.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Review Info" />
            <GridPane prefHeight="304.0" prefWidth="390.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="189.0" minWidth="10.0" prefWidth="99.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="291.0" minWidth="10.0" prefWidth="291.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="63.0" minHeight="10.0" prefHeight="38.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="121.0" minHeight="10.0" prefHeight="91.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="69.0" minHeight="10.0" prefHeight="69.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="64.0" minHeight="10.0" prefHeight="38.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="64.0" minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Title" />
                  <Label text="Description" GridPane.rowIndex="1" />
                  <Label text="Rating" GridPane.rowIndex="2" />
                  <TextField fx:id="titleField" GridPane.columnIndex="1" />
                  <TextField fx:id="descriptionField" prefHeight="82.0" prefWidth="291.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="ratingField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Movie ID" GridPane.rowIndex="3" />
                  <Label text="username" GridPane.rowIndex="4" />
                  <Label fx:id="movieLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               </children>
            </GridPane>
            <HBox prefHeight="59.0" prefWidth="390.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" text="Update" />
                  <Button mnemonicParsing="false" text="Delete" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
