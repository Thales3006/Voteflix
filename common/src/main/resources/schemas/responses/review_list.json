{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MovieWithReviewsResponse",
  "type": "object",
  "properties": {
    "status": { "type": "string", "const": "200" },
    "mensagem": { "type": "string" },
    "filme": { "$ref": "../components/movie_id.json" },
    "reviews": { "type": "array", 
      "items": { "$ref": "../components/review_id.json" }
    }
  },
  "required": ["status", "filme", "reviews"],
  "additionalProperties": true
}