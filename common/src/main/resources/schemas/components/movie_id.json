{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Movie with ID",
  "allOf": [
    { "$ref": "movie.json" },
    {
      "type": "object",
      "properties": {
        "id": { "type": "string", "pattern": "^[0-9]+$" }
      },
      "required": ["id"],
      "additionalProperties": true
    }
  ]
}