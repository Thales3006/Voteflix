{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Review for server return",
  "allOf": [
    { "$ref": "review_id.json" },
    {
      "type": "object",
      "properties": {
        "nome_usuario": { "type": "string" },
        "data": {
          "type": "string",
          "pattern": "^[0-9]{2}/[0-9]{2}/[0-9]{3,4}$"
        },
        "editado": { "type": "string" }
      },
      "required": ["id", "id_filme", "nome_usuario", "nota", "titulo", "descricao", "data"],
      "additionalProperties": true
    }
  ]
}