{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Review with id_filme",
  "allOf": [
    { "$ref": "base_review.json" },
    {
      "type": "object",
      "properties": {
        "id_filme": { 
          "type": "string",
          "pattern": "^[0-9]+$"
        }
      },
      "required": ["id_filme"],
      "additionalProperties": true
    }
  ]
}