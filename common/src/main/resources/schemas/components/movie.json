{ 
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Movie",    
  "type": "object", 
  "properties": {
    "titulo": { "type": "string", "minLength": 3 },
    "diretor": { "type": "string", "minLength": 3 },
    "ano": { "type": "string", "pattern": "^[0-9]{3,4}$" },
    "genero": {
      "type": "array",
      "items": {
      "type": "string",
      "enum": ["Ação", "Aventura", "Comédia", "Drama", "Fantasia", "Ficção Científica", "Terror", "Romance", "Documentário", "Musical", "Animação"]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "sinopse": { "type": "string" , "maxLength": 250 }
  },
  "required": ["titulo", "diretor", "ano", "genero", "sinopse"],
  "additionalProperties": true
}