{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EditUserRequest",
  "type": "object",
  "properties": {
    "operacao": { "type": "string", "const": "EDITAR_PROPRIO_USUARIO" },
    "usuario": { "type": "object", "properties": {
      "senha": { "type": "string", "pattern": "^[A-Za-z0-9]+$" }
      },
      "required": ["senha"],
      "additionalProperties": false
    },
    "token": { "type": "string" }
  },
  "required": ["operacao", "usuario", "token"],
  "additionalProperties": false
}
