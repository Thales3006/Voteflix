{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CriarReview",
  "type": "object",
  "properties": {
    "operacao": { "type": "string", "const": "CRIAR_REVIEW" },
    "review": { "type": "object", "properties": {
      "id_filme": { "type": "string" },
      "titulo": { "type": "string" },
      "descricao": { "type": "string" },
      "nota": { "type": "string", "pattern": "^[0-9]+$" }
      },
      "required": ["id_filme", "titulo", "descricao", "nota"],
      "additionalProperties": false
    },
    "token": { "type": "string" }
  },
  "required": ["operacao", "review", "token"],
  "additionalProperties": false
}