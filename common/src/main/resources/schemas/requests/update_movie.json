{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EditarFilme",
  "type": "object",
  "properties": {
    "operacao": { "type": "string", "const": "EDITAR_FILME" },
    "filme": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "titulo": { "type": "string" },
        "diretor": { "type": "string" },
        "ano": { "type": "string", "pattern": "^[0-9]{4}$" },
        "genero": { "type": "string" },
        "sinopse": { "type": "string" }
      },
      "required": ["id", "titulo", "diretor", "ano", "genero", "sinopse"],
      "additionalProperties": false
    },
    "token": { "type": "string" }
  },
  "required": ["operacao", "filme", "token"],
  "additionalProperties": false
}